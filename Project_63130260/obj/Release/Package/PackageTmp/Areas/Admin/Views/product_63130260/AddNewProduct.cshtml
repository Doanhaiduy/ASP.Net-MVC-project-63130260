
@{
    ViewBag.Title = "AddNewProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }
</style>
<p tabindex="0" class="focus:outline-none text-base sm:text-lg md:text-xl lg:text-2xl font-bold leading-normal text-gray-800 m-2  mt-4"><i class="fas fa-list mr-3"></i> Add New Product</p>

<section class="w-full h-screen overflow-x-hidden border-t flex flex-col">
    <div class="py-16 bg-stone-100 font-poppins ">
        <div class="max-w-4xl px-4 py-4 mx-auto bg-white border shadow-sm  lg:py-4 md:px-6">
            <div class="mb-10 ">
                <h2 class="pb-2 mb-2 text-xl font-bold text-gray-800 md:text-3xl ">
                    Enter Product Info
                </h2>
                <p class="text-sm">
                    Enter product information in the form below
                </p>
            </div>
            <form method="post" class="" enctype="multipart/form-data">
                <h2 class="my-4 text-[22px]">Main Information:</h2>

                <div class="mb-6">
                    <label for=""
                           class="block mb-2 text-sm font-medium">
                        Product Name
                    </label>
                    <input type="text"
                           name="name"
                           class="block w-full px-4 py-3 mb-2 text-sm bg-gray-100 border focus:ring-2 focus:ring-inset focus:ring-orange-600 rounded outline-none"
                           placeholder="Product name...." required>
                </div>
                @{
                    var map = new DATA_63130260.mapCategory();
                    var listCategory = map.GetListCategory();
                }

            <div class="mb-6 ">
                <label for=""
                       class="block mb-2 text-sm font-medium dark:text-gray-400">Category</label>
                <div class="relative">
                    <select name="category_id" required
                            class="block w-full px-4 py-3 mb-2 text-md focus:ring-2 focus:ring-inset focus:ring-orange-600 outline-none text-gray-500 placeholder-gray-400 bg-gray-100 border rounded appearance-none outline-none ">
                        <option value="">Choose category</option>
                        @foreach (var item in listCategory)
                        {
                            <option value="@item.id">@item.category_name</option>
                        }
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center px-2 text-gray-600 ">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16"
                             height="16" fill="currentColor"
                             class="bi bi-chevron-down" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                  d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
                        </svg>
                    </div>
                </div>
                <div class="mb-6">
                    <label for=""
                           class="block mb-2 text-sm font-medium dark:text-gray-400">Description</label>
                    <textarea type="message" placeholder="Description.." required name="description"
                              class="block w-full px-4 py-6 leading-tight outline-none placeholder-gray-400 bg-gray-100 border rounded  focus:ring-2 focus:ring-inset focus:ring-orange-600  "></textarea>
                </div>
