                        <span>x</span>
                        <div class="mb-4">
                            <label for="height" class="block mb-2 text-sm font-medium">Height (mm):</label>
                            <input required type="number" step="0.01" id="height" name="height" class="block w-full rounded-md outline-none border-0 py-1.5 pl-7 pr-20 text-gray-900  bg-gray-100 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6" placeholder="e.g. 10.39">
                        </div>
                    </div>
                    <div class="flex gap-5 items-center">
                        <div class="mb-4 w-1/2">
                            <label for="weight" class="block mb-2 text-sm font-medium">Weight (g):</label>
                            <input required type="number" step="0.01" id="weight" name="weight" class="block w-full rounded-md outline-none border-0 py-1.5 pl-7 pr-20 text-gray-900  bg-gray-100 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6" placeholder="e.g. 1000">
                        </div>
                        <div class="mb-4 w-1/2">
                            <label for="materials" class="block mb-2 text-sm font-medium">Materials:</label>
                            <input required type="text" id="materials" name="materials" class="block w-full rounded-md outline-none border-0 py-1.5 pl-7 pr-20 text-gray-900  bg-gray-100 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-orange-600 sm:text-sm sm:leading-6" placeholder="e.g. Plastic">
