@section scripts{
    <script>
        const gridProduct = document.getElementById("grid-product")
        const listProduct = document.getElementById("list-product")

        // Hiển thị dạng lưới
        const toGrid = function () {
            gridProduct.classList.remove("hidden")
            listProduct.classList.add("hidden")
        }

        // Hiển thị dạng danh sách theo hàng
        const toList = function () {
            gridProduct.classList.add("hidden")
            listProduct.classList.remove("hidden")
        }


        // Lọc theo danh mục
        const categoryCheckboxes = document.querySelectorAll(".checkbox-category");
        const productList = document.querySelectorAll(".product-item");
        categoryCheckboxes.forEach((checkbox) => {
            checkbox.addEventListener("change", () => {
                // Tạo một mảng để lưu trữ các giá trị danh mục đã chọn
                const selectedCategories = Array.from(categoryCheckboxes)
                    .filter((checkbox) => checkbox.checked)
                    .map((checkbox) => checkbox.value);
                productList.forEach((product) => {
                    const productCategory = product.getAttribute("data-category");

                    if (selectedCategories.length === 0 || selectedCategories.includes(productCategory)) {
                        product.classList.remove("hidden");
                    } else {
                        product.classList.add("hidden");
                    }
                });
            });
        });


        // Tìm kiếm nhanh
        // Lấy ra ô input tìm kiếm
        const inputSearch = document.querySelectorAll("input[name='search']")

        inputSearch.forEach((item) => {
            //Bắt sự kiện khi gõ vào ô tìm kiếm
            item.onkeyup = function () {

                //Duyệt qua danh sách sản phẩm
                productList.forEach((product) => {
                    // Lấy ra tên sản phẩm và gán vào biến name
                    var name = product.querySelector(".name").innerText.toLowerCase();

                    //Kiểm tra nếu giá trị của ô input tìm kiếm vừa nhập nằm trong name thì hiển thị ra sản phẩm đó bằng cách xóa class hidden
                    if (name.includes(item.value.toLowerCase())) {
                        product.classList.remove("hidden");
                    }
                    //người lại sẽ ẩn các sản phẩm không thỏa mãn bằng cách thêm class hidden

                    else {
                        product.classList.add("hidden");
                    }
                })
            }
        })
    </script>
