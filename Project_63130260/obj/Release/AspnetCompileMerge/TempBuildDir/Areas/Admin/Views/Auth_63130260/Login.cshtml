<script src="https://cdn.tailwindcss.com"></script>
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>Login | Admin - Sinp</title>
    <link rel="stylesheet" href="/build/tailwind.css" type="text/css"
          media="screen" title="no title" charset="utf-8" />
</head>

<body >
    <div class="lg:flex">
        <div class="lg:w-1/2 xl:max-w-screen-sm">
            <div class="py-12 bg-orange-100 lg:bg-white flex justify-center lg:justify-start lg:px-12">
                <div class="cursor-pointer flex items-center">
                    <img src="~/Content/assets/images/logo.webp"
                         alt="Alternate Text" />
                </div>
            </div>
            <div class="mt-10 px-12 sm:px-24 md:px-48 lg:px-12 lg:mt-16 xl:px-24 xl:max-w-2xl">
                <h2 class="text-center text-4xl text-black-900 font-display font-semibold lg:text-left xl:text-5xl
                    xl:text-bold">
                    Log in admin page
                </h2>
                <div class="mt-12">
                    <form method="post">
                        <div>
                            <div class="text-sm font-bold text-gray-700 tracking-wide">
                                Email Address
                            </div>
                            <input class="w-full text-lg py-2 border-b border-gray-300 focus:outline-none focus:border-orange-500" name="username"
                                   type="email" placeholder="example@gmail.com" value="@ViewBag.username">
                        </div>
                        <div class="mt-8">
                            <div class="flex justify-between items-center">
                                <div class="text-sm font-bold text-gray-700 tracking-wide">
                                    Password
                                </div>
                            </div>
                            <input class="w-full text-lg py-2 border-b border-gray-300 focus:outline-none focus:border-orange-500" name="password"
                                   type="password" placeholder="Enter your password">
                        </div>
                        <p class="text-red-500 text-center mt-4">@ViewBag.error</p>

                        <div class="mt-10">
                            <button class="bg-orange-500 text-gray-100 p-4 w-full rounded-full tracking-wide
                                font-semibold font-display focus:outline-none focus:shadow-outline hover:bg-orange-600
                                shadow-lg">
                                Log In
                            </button>
                        </div>
                    </form>
                    <!-- <div
            class="mt-12 text-sm font-display font-semibold text-gray-700 text-center">
            Don't have an account ? <a
                class="cursor-pointer text-orange-600 hover:text-orange-800">Sign
                up</a>
        </div> -->
                </div>
            </div>
        </div>
        <div class="hidden lg:flex items-center justify-center bg-orange-100 flex-1 h-screen">
            <div class="max-w-md transform duration-200 hover:scale-110 cursor-pointer">
                <img src="~/Content/assets/images/Admin-amico.png" />
            </div>
        </div>
    </div>
</body>

</html>